{
    "compilerOptions": {
        "incremental": true,
        "target": "es2019",
        "module": "CommonJS",
        "moduleResolution": "node",
        "removeComments": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "allowJs": false,
        "pretty": true,
        "declaration": true,
        "declarationMap": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitReturns": true,
        "allowUnreachableCode": false,
        "inlineSourceMap": true,
        "inlineSources": true,
        "skipDefaultLibCheck": true,
        "newLine": "CRLF",
        "alwaysStrict": true,
        "esModuleInterop": true,
        "noEmitOnError": true,
        "skipLibCheck": true,
        "resolveJsonModule": true,
        "outDir": "./lib"
    },
}
